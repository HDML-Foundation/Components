{
  "name": "@hdml/components",
  "version": "0.0.0-alpha.0",
  "license": "Apache-2.0",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "@hdml/types": "^0.0.2-alpha.3",
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.9",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-legacy": "^2.1.1",
    "@web/test-runner": "^0.19.0",
    "@web/test-runner-playwright": "^0.11.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "esbuild": "^0.24.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2",
    "typedoc": "^0.26.11",
    "typescript": "^5.5.0",
    "tslib": "^2.8.1"
  },
  "scripts": {
    "clear": "rm -rf bin && rm -rf tst && rm -rf cjs && rm -rf dts && rm -rf esm && rm -rf tsconfig/*.tsbuildinfo && rm -rf coverage && rm -rf docs",
    "manifest": "node_modules/.bin/cem analyze --litelement --globs \"src/**/*.ts\" --exclude \"src/index.ts\"",
    "docs": "node_modules/.bin/typedoc ./src/index.ts --tsconfig ./tsconfig/esm.json --out ./docs",
    "lint": "node ./node_modules/.bin/eslint -c .eslintrc.js --fix --parser-options=tsconfigRootDir:'./tsconfig' 'src/**/*.ts'",
    "tst_dev": "wtr --config .testrc.js",
    "tst_prd": "MODE=prod wtr --config .testrc.js",
    "test": "npm run compile_tst && npm run tst_dev -- --coverage",
    "build": "npm run clear && npm run lint && npm run test && npm run compile_all && npm run docs",
    "compile_cjs": "tsc -b ./tsconfig/cjs.json",
    "compile_esm": "tsc -b ./tsconfig/esm.json",
    "compile_dts": "tsc -b ./tsconfig/dts.json",
    "compile_bin": "./node_modules/.bin/esbuild ./esm/index.js --bundle --minify --format=iife --sourcemap --outfile=./bin/index.min.js",
    "compile_tst": "tsc -b ./tsconfig/tst.json",
    "compile_all": "npm run compile_cjs && npm run compile_esm && npm run compile_dts && npm run compile_bin",
    "srv": "wds --config .devrc.js --open html/index.html --watch",
    "dev": "npm run compile_esm -- --watch & npm run srv"
  },
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "dts/index.d.ts",
  "customElements": "custom-elements.json"
}