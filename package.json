{
  "name": "@hdml/components",
  "version": "0.0.0-alpha.0",
  "license": "Apache-2.0",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@custom-elements-manifest/analyzer": "^0.6.3",
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.9",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-legacy": "^2.1.1",
    "@web/test-runner": "^0.19.0",
    "@web/test-runner-playwright": "^0.11.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "esbuild": "^0.24.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2",
    "typescript": "^5.5.0",
    "tslib": "^2.8.1"
  },
  "scripts": {
    "clean": "rm -rf bin && rm -rf tst && rm -rf cjs && rm -rf dts && rm -rf esm && rm -rf tsconfig/*.tsbuildinfo",
    "lint": "node ./node_modules/.bin/eslint -c .eslintrc.js --fix --parser-options=tsconfigRootDir:'./tsconfig' 'src/**/*.ts'",
    "compile_cjs": "tsc -b ./tsconfig/cjs.json",
    "compile_esm": "tsc -b ./tsconfig/esm.json",
    "compile_dts": "tsc -b ./tsconfig/dts.json",
    "compile_bin": "./node_modules/.bin/esbuild ./esm/index.js --bundle --minify --format=iife --sourcemap --outfile=./bin/index.min.js",
    "compile_tst": "tsc -b ./tsconfig/tst.json",
    "compile_all": "npm run compile_cjs && npm run compile_esm && npm run compile_dts && npm run compile_bin",
    "srv": "wds --config .devrc.js --open html/index.html --watch",
    "dev": "npm run compile_esm -- --watch & npm run srv",
    "tst_dev": "wtr --config .testrc.js",

    
    "docs": "npm run docs:clean && npm run build && npm run analyze && npm run docs:build && npm run docs:assets && npm run docs:gen",
    "docs:clean": "rimraf docs",
    "docs:gen": "eleventy --config=.eleventy.cjs",
    "docs:gen:watch": "eleventy --config=.eleventy.cjs --watch",
    "docs:build": "rollup -c --file docs/my-element.bundled.js",
    "docs:assets": "cp node_modules/prismjs/themes/prism-okaidia.css docs/",
    "docs:serve": "wds --root-dir=docs --node-resolve --watch",
    
    "test": "npm run test:dev && npm run test:prod",
    "test:watch": "wtr --watch",
    "test:prod": "MODE=prod wtr",
    "test:prod:watch": "MODE=prod wtr --watch"
  },
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "dts/index.d.ts",
  "customElements": "hdml-elements.json"
}